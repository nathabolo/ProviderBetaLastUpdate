<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/layout_myjob"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/default_icon"
            android:id="@+id/imgUserActiveJob"
            android:layout_width="65dp"
            android:layout_height="65dp" />

        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/imgUserActiveJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgUserActiveJob">


            <com.tradesman.provider.component.MyFontOpenRegTextView
                android:id="@+id/txtusernameactiveJob"
                android:textSize="@dimen/active_job_username"
                android:lines="1"
                android:text="User name"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.tradesman.provider.component.MyFontRaidProBoldTextView
                android:id="@+id/txtJobtitleActibeJob"
                android:textSize="@dimen/active_job_servicvename"
                android:lines="1"
                android:text="Job Title.."
                android:textAllCaps="true"
                android:ems="12"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.tradesman.provider.component.MyFontOpenRegTextView
                android:id="@+id/txtjobdescriptionActiveJob"
                android:textColor="@color/color_decsriptipn"
                android:textSize="@dimen/active_job_description"
                android:lines="2"
                android:ems="12"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tradesman.provider.component.MyFontOpenRegTextView
                android:id="@+id/txtservicePriceActiveJob"
                android:textSize="@dimen/active_job_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.tradesman.provider.component.MyFontOpenRegTextView
                android:gravity="right"
                android:id="@+id/txttimeActiveJob"
                android:textAllCaps="true"
                android:textSize="@dimen/active_job_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:background="@drawable/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</LinearLayout>
