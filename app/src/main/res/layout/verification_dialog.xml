<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="@dimen/margin_20"
        android:background="@mipmap/bkk"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="200dp">

        <ImageView
           android:padding="@dimen/margin_15"
            android:id="@+id/imgCLosePopup"
            android:layout_gravity="right"
            android:src="@drawable/close_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.tradesman.provider.component.MyFontRaidProRegTextView
            android:textColor="@color/whiteColor"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/warning"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:textSize="@dimen/provide_quote_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:gravity="center"
        android:orientation="vertical">

        <com.tradesman.provider.component.MyFontOpenRegTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/buyTokenMessage"
            android:textColor="@color/color_ligt_black"
            android:textSize="@dimen/you_see_text" />

        <com.tradesman.provider.component.MyFontOpenRegTextView
            android:id="@+id/txtadminPriceDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_decsriptipn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/you_see_text" />

        <EditText
            android:id="@+id/edtVerification_key"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Verification key"
            android:inputType="number" />


    </LinearLayout>



    <LinearLayout
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/margin_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </android.support.v7.widget.CardView>


        <com.tradesman.provider.component.MyFontOpenRegButton
            android:id="@+id/btnBuyTokens"
            android:textAllCaps="false"
            android:textSize="@dimen/submit_size"
            android:textColor="@color/whiteColor"
            android:text="VERIFY"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tradesman.provider.component.MyFontOpenRegButton
            android:id="@+id/btnCancel"
            android:textAllCaps="false"
            android:textSize="@dimen/submit_size"
            android:textColor="@color/whiteColor"
            android:text="CANCEL"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>



</LinearLayout>