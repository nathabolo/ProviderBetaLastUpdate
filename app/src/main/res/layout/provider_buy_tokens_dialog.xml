<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@mipmap/bkk"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20">

        <ImageView
            android:id="@+id/imgCLosePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/margin_15"
            android:src="@drawable/close_popup" />

        <com.tradesman.provider.component.MyFontRaidProRegTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/warning"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/provide_quote_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:gravity="center"
        android:orientation="vertical">

        <com.tradesman.provider.component.MyFontOpenRegTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/buyTokenMessage"
            android:textColor="@color/color_ligt_black"
            android:textSize="@dimen/you_see_text" />

        <com.tradesman.provider.component.MyFontOpenRegTextView
            android:id="@+id/txtadminPriceDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_decsriptipn"
            android:textSize="@dimen/you_see_text" />


    </LinearLayout>



    <LinearLayout
        android:background="@color/whiteColor"
        android:paddingBottom="@dimen/avilable_job_margin_10"
        android:paddingRight="@dimen/screen_padding_50"
        android:paddingLeft="@dimen/screen_padding_50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/margin_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </android.support.v7.widget.CardView>


        <com.tradesman.provider.component.MyFontOpenRegButton
            android:id="@+id/btnBuyTokens"
            android:textAllCaps="false"
            android:textSize="@dimen/submit_size"
            android:textColor="@color/whiteColor"
            android:text="PROCEED TO BUY"
            android:background="@color/colorPrimary"
            android:paddingTop="@dimen/avilable_job_margin_10"
            android:paddingBottom="@dimen/avilable_job_margin_10"
            android:layout_marginBottom="@dimen/avilable_job_margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>



</LinearLayout>